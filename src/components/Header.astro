<header class="flex justify-center items-center w-full p-3 sm:p-5">
    <nav class="flex flex-wrap items-center justify-center gap-2 sm:gap-6 px-4 sm:px-8 py-2 sm:py-4 bg-white/80 backdrop-blur-sm border border-gray-200 rounded-full shadow-lg">
        {[

            { path: "/", label: "Home" },
            { path: "/publication", label: "Publication" },
            { path: "/visualization", label: "Visualization" },
            { path: "/blog", label: "Data Histories" }
        ].map(({ path, label }) => (
            <a 
                href={path}
                class:list={[
                    "relative font-medium transition-colors duration-200 text-sm sm:text-base",
                    "after:absolute after:left-0 after:-bottom-1 after:h-0.5 after:bg-blue-600 after:transition-all",
                    Astro.url.pathname === path 
                        ? "text-blue-600 after:w-full" 
                        : "text-gray-700 hover:text-blue-600 after:w-0 hover:after:w-full"
                ]}
            >
                {label}
            </a>
        ))}
    </nav>
</header>